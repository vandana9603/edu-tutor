        function showSubject(subject) {
            // Hide all sections
            document.querySelectorAll('.video-section').forEach(section => {
                section.classList.remove('active');
            });
            
            // Show selected subject
            document.getElementById(subject).classList.add('active');
            
            // Update button states
            document.querySelectorAll('.subject-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
            
            currentSubject = subject;
        }

        function playVideo(subject, video) {
            currentSubject = subject;
            currentVideo = video;
            
            // Hide subject selector and video sections
            document.getElementById('subjectSelector').style.display = 'none';
            document.querySelectorAll('.video-section').forEach(section => {
                section.style.display = 'none';
            });
            
            // Show video player
            document.getElementById('videoPlayer').classList.add('active');
            document.getElementById('currentVideoTitle').textContent = videoData[subject][video].title;
            
            // Load actual video
            const videoUrl = videoUrls[subject][video];
            console.log('Loading video:', videoUrl); // Debug log
            
            if (videoUrl) {
                document.getElementById('videoFrame').innerHTML = `
                    <iframe 
                        width="100%" 
                        height="100%" 
                        src="${videoUrl}?autoplay=1" 
                        frameborder="0" 
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
                        allowfullscreen
                        style="border-radius: 10px;">
                    </iframe>
                `;
            } else {
                document.getElementById('videoFrame').innerHTML = `
                    <div style="text-align: center; color: white;">
                        <h3>❌ Video not found</h3>
                        <p>Please check the video URL for ${subject} - ${video}</p>
                    </div>
                `;
            }
        }

        function controlVideo(action) {
            const videoFrame = document.getElementById('videoFrame');
            const iframe = videoFrame.querySelector('iframe');
            
            switch(action) {
                case 'play':
                    // Note: Direct iframe control requires postMessage API for YouTube
                    alert('🎬 Video controls: Use the video player controls directly');
                    break;
                case 'pause':
                    alert('⏸ Video controls: Use the video player controls directly');
                    break;
                case 'restart':
                    // Reload the iframe to restart
                    if (iframe) {
                        const currentSrc = iframe.src;
                        iframe.src = currentSrc;
                    }
                    break;
            }
        }

        function generateQuiz() {
            document.getElementById('videoPlayer').style.display = 'none';
            document.getElementById('quizSection').classList.add('active');
            
            // Show loading state
            document.getElementById('quizContent').innerHTML = `
                <div class="generating-quiz">
                    <div class="spinner"></div>
                    <h4>🤖 EduTutor AI is analyzing video content...</h4>
                    <p>Generating personalized quiz questions based on the video</p>
                </div>
            `;
            
            // Simulate AI processing time
            setTimeout(() => {
                displayQuiz();
            }, 3000);
        }

        function displayQuiz() {
            const questions = videoData[currentSubject][currentVideo].questions;
            let quizHTML = '';
            
            questions.forEach((q, index) => {
                quizHTML += `
                    <div class="question">
                        <div class="question-text">Question ${index + 1}: ${q.question}</div>
                        <div class="options">
                            ${q.options.map((option, optIndex) => `
                                <div class="option" onclick="selectOption(${index}, ${optIndex})" data-question="${index}" data-option="${optIndex}">
                                    ${String.fromCharCode(65 + optIndex)}. ${option}
                                </div>
                            `).join('')}
                        </div>
                    </div>
                `;
            });
            
            quizHTML += '<button class="submit-quiz" onclick="submitQuiz()">Submit Quiz 📝</button>';
            
            document.getElementById('quizContent').innerHTML = quizHTML;
        }

        function selectOption(questionIndex, optionIndex) {
            // Remove previous selections for this question
            document.querySelectorAll([data-question="${questionIndex}"]).forEach(opt => {
                opt.classList.remove('selected');
            });
            
            // Add selection to clicked option
            event.target.classList.add('selected');
        }

        function submitQuiz() {
            const questions = videoData[currentSubject][currentVideo].questions;
            const selectedOptions = document.querySelectorAll('.option.selected');
            let score = 0;
            let results = [];
            
            questions.forEach((q, index) => {
                const selectedOption = document.querySelector([data-question="${index}"].selected);
                if (selectedOption) {
                    const selectedIndex = parseInt(selectedOption.dataset.option);
                    if (selectedIndex === q.correct) {
                        score++;
                        results.push({ question: index, correct: true });
                    } else {
                        results.push({ question: index, correct: false, selected: selectedIndex, correct_answer: q.correct });
                    }
                }
            });
            
            const percentage = Math.round((score / questions.length) * 100);
            
            alert(🎉 Quiz Completed!\n\nScore: ${score}/${questions.length} (${percentage}%)\n\n${percentage >= 70 ? 'Great job! You understood the video content well.' : 'Consider reviewing the video again to improve your understanding.'});
        }

        function backToVideo() {
            document.getElementById('quizSection').classList.remove('active');
            document.getElementById('quizSection').style.display = 'none';
            document.getElementById('videoPlayer').style.display = 'block';
        }

        function backToSubjects() {
            document.getElementById('videoPlayer').classList.remove('active');
            document.getElementById('videoPlayer').style.display = 'none';
            document.getElementById('subjectSelector').style.display = 'block';
            document.querySelectorAll('.video-section').forEach(section => {
                section.style.display = 'block';
                if (section.id === currentSubject) {
                    section.classList.add('active');
                }
            });
        }
    </script>
</body>

    <script>
        // Global state management
        let currentUser = null;
        let currentQuiz = null;
        let questionIndex = 0;
        let studentData = {
            quizzes: [],
            courses: [],
            performance: [],
            diagnosticComplete: false
        };

        // Sample data for demonstration
        const sampleQuestions = [
            {
                question: "What is the derivative of x²?",
                options: ["2x", "x", "2", "x²"],
                correct: 0,
                explanation: "The derivative of x² is 2x using the power rule."
            },
            {
                question: "Which of the following is a prime number?",
                options: ["15", "21", "17", "25"],
                correct: 2,
                explanation: "17 is prime because it's only divisible by 1 and itself."
            },
            {
                question: "What is the capital of France?",
                options: ["London", "Berlin", "Paris", "Madrid"],
                correct: 2,
                explanation: "Paris is the capital and largest city of France."
            }
        ];

        const sampleCourses = [
            { name: "Advanced Mathematics", teacher: "Dr. Smith", students: 25, avgScore: 85 },
            { name: "Physics 101", teacher: "Prof. Johnson", students: 30, avgScore: 78 },
            { name: "Chemistry", teacher: "Ms. Davis", students: 22, avgScore: 92 },
            { name: "Biology", teacher: "Dr. Wilson", students: 28, avgScore: 88 }
        ];

        // Navigation functions
        function showPanel(panelId) {
            // Hide all panels
            document.querySelectorAll('.content-panel').forEach(panel => {
                panel.classList.remove('active');
            });
            
            // Remove active class from all tabs
            document.querySelectorAll('.nav-tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Show selected panel
            document.getElementById(panelId).classList.add('active');
            
            // Add active class to clicked tab
            event.target.classList.add('active');

            // Initialize panel-specific content
            if (panelId === 'educator') {
                initializeEducatorDashboard();
            } else if (panelId === 'integration') {
                initializeIntegrationPanel();
            }
        }

        // Authentication functions
        function updateAuthForm() {
            const userType = document.getElementById('userType').value;
            const studentFields = document.getElementById('studentFields');
            
            if (userType === 'student') {
                studentFields.style.display = 'block';
            } else {
                studentFields.style.display = 'none';
            }
        }

        function login() {
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            const userType = document.getElementById('userType').value;
            
            if (!email || !password) {
                showMessage('authMessage', 'Please fill in all fields', 'error');
                return;
            }

            // Simulate authentication
            currentUser = {
                email: email,
                type: userType,
                name: email.split('@')[0],
                gradeLevel: document.getElementById('gradeLevel').value,
                learningStyle: document.getElementById('learningStyle').value
            };

            showMessage('authMessage', 'Login successful! Welcome to EduTutor AI.', 'success');
            
            // Auto-switch to appropriate panel
            setTimeout(() => {
                if (userType === 'student') {
                    showPanel('student');
                } else {
                    showPanel('educator');
                }
            }, 1500);
        }


        // Student Portal functions
        function startDiagnostic() {
            document.getElementById('diagnosticTest').classList.add('hidden');
            document.getElementById('quizInterface').classList.remove('hidden');
            
            currentQuiz = {
                questions: sampleQuestions,
                answers: [],
                type: 'diagnostic'
            };
            
            questionIndex = 0;
            showQuestion();
        }

        function showQuestion() {
            const question = currentQuiz.questions[questionIndex];
            const container = document.getElementById('currentQuestion');
            
            container.innerHTML = `
                <div class="question-card">
                    <div class="question-number">${questionIndex + 1}</div>
                    <h3>${question.question}</h3>
                    <div class="options">
                        ${question.options.map((option, index) => `
                            <div class="option" onclick="selectOption(${index})" data-index="${index}">
                                ${option}
                            </div>
                        `).join('')}
                    </div>
                </div>
            `;
            
            updateProgress();
        }

        function selectOption(index) {
            // Remove previous selections
            document.querySelectorAll('.option').forEach(opt => {
                opt.classList.remove('selected');
            });
            
            // Add selection to clicked option
            document.querySelector([data-index="${index}"]).classList.add('selected');
            
            // Store answer
            if (!currentQuiz.answers[questionIndex]) {
                currentQuiz.answers[questionIndex] = {};
            }
            currentQuiz.answers[questionIndex].selected = index;
            
            // Show feedback
            showFeedback(index);
        }

        function showFeedback(selectedIndex) {
            const question = currentQuiz.questions[questionIndex];
            const feedbackPanel = document.getElementById('feedbackPanel');
            const feedbackText = document.getElementById('feedbackText');
            
            const isCorrect = selectedIndex === question.correct;
            
            feedbackText.innerHTML = `
                <strong>${isCorrect ? '✅ Correct!' : '❌ Incorrect'}</strong><br>
                ${question.explanation}
            `;
            
            feedbackPanel.classList.remove('hidden');
            
            // Update option styling
            document.querySelectorAll('.option').forEach((opt, index) => {
                if (index === question.correct) {
                    opt.classList.add('correct');
                } else if (index === selectedIndex && !isCorrect) {
                    opt.classList.add('incorrect');
                }
            });
        }

        function nextQuestion() {
            questionIndex++;
            
            if (questionIndex < currentQuiz.questions.length) {
                showQuestion();
                document.getElementById('feedbackPanel').classList.add('hidden');
            } else {
                document.getElementById('nextButton').style.display = 'none';
                document.getElementById('submitQuiz').style.display = 'inline-block';
            }
        }

        function submitQuiz() {
            const score = calculateScore();
            
            // Store quiz results
            const quizResult = {
                type: currentQuiz.type,
                score: score,
                totalQuestions: currentQuiz.questions.length,
                answers: currentQuiz.answers,
                timestamp: new Date(),
                subject: currentQuiz.subject || 'General'
            };
            
            studentData.quizzes.push(quizResult);
            
            if (currentQuiz.type === 'diagnostic') {
                studentData.diagnosticComplete = true;
                showDiagnosticResults(score);
            } else {
                showQuizResults(score);
            }
        }

        function calculateScore() {
            let correct = 0;
            currentQuiz.answers.forEach((answer, index) => {
                if (answer && answer.selected === currentQuiz.questions[index].correct) {
                    correct++;
                }
            });
            return Math.round((correct / currentQuiz.questions.length) * 100);
        }

        function showDiagnosticResults(score) {
            const container = document.getElementById('currentQuestion');
            let level = 'Beginner';
            let recommendations = [];
            
            if (score >= 80) {
                level = 'Advanced';
                recommendations = ['Take advanced courses', 'Try challenging practice sets', 'Consider tutoring others'];
            } else if (score >= 60) {
                level = 'Intermediate';
                recommendations = ['Focus on weak areas', 'Regular practice sessions', 'Join study groups'];
            } else {
                level = 'Beginner';
                recommendations = ['Start with fundamentals', 'Take more time with basics', 'Use visual learning aids'];
            }
            
            container.innerHTML = `
                <div class="question-card" style="text-align: center;">
                    <h2>🎯 Diagnostic Results</h2>
                    <div style="font-size: 3rem; color: #667eea; margin: 20px 0;">${score}%</div>
                    <h3>Your Level: ${level}</h3>
                    <div style="margin: 20px 0;">
                        <h4>Personalized Recommendations:</h4>
                        <ul style="text-align: left; max-width: 400px; margin: 0 auto;">
                            ${recommendations.map(rec => <li style="margin: 10px 0;">${rec}</li>).join('')}
                        </ul>
                    </div>
                    <button class="btn" onclick="showStudentDashboard()">Continue to Dashboard</button>
                </div>
            `;
            
            document.getElementById('feedbackPanel').classList.add('hidden');
            document.getElementById('nextButton').style.display = 'none';
            document.getElementById('submitQuiz').style.display = 'none';
        }

        function showQuizResults(score) {
            const container = document.getElementById('currentQuestion');
            const performance = score >= 80 ? 'Excellent!' : score >= 60 ? 'Good!' : 'Needs Improvement';
            const emoji = score >= 80 ? '🌟' : score >= 60 ? '👍' : '📚';
            
            container.innerHTML = `
                <div class="question-card" style="text-align: center;">
                    <h2>${emoji} Quiz Complete!</h2>
                    <div style="font-size: 3rem; color: #667eea; margin: 20px 0;">${score}%</div>
                    <h3>${performance}</h3>
                    <p>You scored ${score}% on this ${currentQuiz.subject} quiz.</p>
                    <button class="btn" onclick="showStudentDashboard()">Back to Dashboard</button>
                    <button class="btn btn-secondary" onclick="retakeQuiz()">Retake Quiz</button>
                </div>
            `;
            
            updateStudentStats();
        }

        function showStudentDashboard() {
            document.getElementById('quizInterface').classList.add('hidden');
            document.getElementById('studentDashboard').classList.remove('hidden');
            document.getElementById('diagnosticTest').classList.add('hidden');
            
            updateStudentStats();
            loadCourses();
            initializeProgressChart();
        }

        function updateStudentStats() {
            const totalQuizzes = studentData.quizzes.length;
            const averageScore = totalQuizzes > 0 ? 
                Math.round(studentData.quizzes.reduce((sum, quiz) => sum + quiz.score, 0) / totalQuizzes) : 0;
            const currentStreak = calculateStreak();
            const level = averageScore >= 80 ? 'Advanced' : averageScore >= 60 ? 'Intermediate' : 'Beginner';
            
            document.getElementById('totalQuizzes').textContent = totalQuizzes;
            document.getElementById('averageScore').textContent = averageScore + '%';
            document.getElementById('currentStreak').textContent = currentStreak;
            document.getElementById('nextLevel').textContent = level;
        }

        function calculateStreak() {
            // Simulate streak calculation
            return Math.floor(Math.random() * 10) + 1;
        }

        function loadCourses() {
            const courseGrid = document.getElementById('courseGrid');
            const courses = [
                { name: 'Mathematics', progress: 75, nextTopic: 'Calculus', difficulty: 'Intermediate' },
                { name: 'Physics', progress: 60, nextTopic: 'Mechanics', difficulty: 'Advanced' },
                { name: 'Chemistry', progress: 90, nextTopic: 'Organic Chemistry', difficulty: 'Beginner' },
                { name: 'Biology', progress: 45, nextTopic: 'Cell Structure', difficulty: 'Intermediate' }
            ];
            
            courseGrid.innerHTML = courses.map(course => `
                <div class="course-card">
                    <h3>${course.name}</h3>
                    <p><strong>Progress:</strong> ${course.progress}%</p>
                    <p><strong>Next Topic:</strong> ${course.nextTopic}</p>
                    <p><strong>Difficulty:</strong> ${course.difficulty}</p>
                    <div class="progress-bar" style="margin: 10px 0;">
                        <div class="progress-fill" style="width: ${course.progress}%"></div>
                    </div>
                    <button class="btn" onclick="startCourseQuiz('${course.name}')">Start Quiz</button>
                </div>
            `).join('');
        }

        function startCourseQuiz(courseName) {
            document.getElementById('studentDashboard').classList.add('hidden');
            document.getElementById('quizInterface').classList.remove('hidden');
            
            // Generate course-specific questions
            currentQuiz = {
                questions: generateCourseQuestions(courseName),
                answers: [],
                type: 'course',
                subject: courseName
            };
            
            questionIndex = 0;
            showQuestion();
        }

        function generateCourseQuestions(courseName) {
            const questionSets = {
                'Mathematics': [
                    {
                        question: "What is the integral of 2x?",
                        options: ["x²", "x² + C", "2x²", "2x² + C"],
                        correct: 1,
                        explanation: "The integral of 2x is x² + C, where C is the constant of integration."
                    },
                    {
                        question: "Solve for x: 2x + 5 = 15",
                        options: ["5", "10", "7.5", "20"],
                        correct: 0,
                        explanation: "2x + 5 = 15, so 2x = 10, therefore x = 5."
                    }
                ],
                'Physics': [
                    {
                        question: "What is Newton's second law?",
                        options: ["F = ma", "E = mc²", "v = u + at", "s = ut + ½at²"],
                        correct: 0,
                        explanation: "Newton's second law states that Force equals mass times acceleration (F = ma)."
                    },
                    {
                        question: "What is the unit of energy?",
                        options: ["Watt", "Joule", "Newton", "Pascal"],
                        correct: 1,
                        explanation: "The SI unit of energy is the Joule (J)."
                    }
                ],
                'Chemistry': [
                    {
                        question: "What is the atomic number of Carbon?",
                        options: ["4", "6", "8", "12"],
                        correct: 1,
                        explanation: "Carbon has an atomic number of 6, meaning it has 6 protons."
                    },
                    {
                        question: "What is the chemical formula for water?",
                        options: ["H₂O", "CO₂", "NaCl", "CH₄"],
                        correct: 0,
                        explanation: "Water has the chemical formula H₂O - two hydrogen atoms and one oxygen atom."
                    }
                ],
                'Biology': [
                    {
                        question: "What is the powerhouse of the cell?",
                        options: ["Nucleus", "Ribosome", "Mitochondria", "Chloroplast"],
                        correct: 2,
                        explanation: "Mitochondria are called the powerhouse of the cell because they produce ATP energy."
                    },
                    {
                        question: "What is DNA?",
                        options: ["Protein", "Carbohydrate", "Lipid", "Nucleic Acid"],
                        correct: 3,
                        explanation: "DNA (Deoxyribonucleic Acid) is a nucleic acid that carries genetic information."
                    }
                ]
            };
            
            return questionSets[courseName] || sampleQuestions;
        }

        function retakeQuiz() {
            questionIndex = 0;
            currentQuiz.answers = [];
            document.getElementById('feedbackPanel').classList.add('hidden');
            document.getElementById('nextButton').style.display = 'inline-block';
            document.getElementById('submitQuiz').style.display = 'none';
            showQuestion();
        }

        function updateProgress() {
            const progress = ((questionIndex + 1) / currentQuiz.questions.length) * 100;
            document.getElementById('quizProgress').style.width = progress + '%';
        }

        function initializeProgressChart() {
            const ctx = document.getElementById('progressChart').getContext('2d');
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4', 'Week 5', 'Week 6'],
                    datasets: [{
                        label: 'Quiz Scores (%)',
                        data: [65, 72, 78, 85, 82, 90],
                        borderColor: '#667eea',
                        backgroundColor: 'rgba(102, 126, 234, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100
                        }
                    }
                }
            });
        }

        // Educator Dashboard functions
        function initializeEducatorDashboard() {
            updateEducatorStats();
            initializeClassPerformanceChart();
            initializeProgressTrendsChart();
            loadStudentResults();
        }

        function updateEducatorStats() {
            // Simulate educator statistics
            document.getElementById('totalStudents').textContent = '127';
            document.getElementById('totalCourses').textContent = '8';
            document.getElementById('avgClassScore').textContent = '83%';
            document.getElementById('completionRate').textContent = '94%';
        }

        function initializeClassPerformanceChart() {
            const ctx = document.getElementById('classPerformanceChart').getContext('2d');
            new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Excellent (90-100%)', 'Good (80-89%)', 'Fair (70-79%)', 'Needs Improvement (<70%)'],
                    datasets: [{
                        data: [25, 45, 20, 10],
                        backgroundColor: ['#48bb78', '#667eea', '#ed8936', '#f56565'],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
        }

        function initializeProgressTrendsChart() {
            const ctx = document.getElementById('progressTrendsChart').getContext('2d');
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Mathematics', 'Physics', 'Chemistry', 'Biology', 'English', 'History'],
                    datasets: [{
                        label: 'Average Score (%)',
                        data: [85, 78, 92, 88, 81, 76],
                        backgroundColor: ['#667eea', '#48bb78', '#ed8936', '#9f7aea', '#38b2ac', '#f56565'],
                        borderRadius: 8
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100
                        }
                    }
                }
            });
        }

        function loadStudentResults() {
            const container = document.getElementById('studentResults');
